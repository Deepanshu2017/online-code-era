#include <stdio.h>
#include <stdlib.h>

int main(void) {
    unsigned long long int n;
    scanf("%llu",&n);
    if(n%2==0)
        printf("%llu\n",n/2);
    else{
        n+=1;
        printf("-%llu\n",n/2);
    }
    return 0;
}
