#include <iostream>
#include <stdio.h>
using namespace std;
int main(void){

	unsigned long long int T=0,N=0,res=0;
	scanf("%llu",&T);
	while(T--){

		scanf("%llu",&N);
		res=((N)*(N-1))/2;
		printf("%llu\n",res);

	}
	return 0;
}
